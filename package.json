{
  "name": "create-react-recoil-tailwind-ts",
  "version": "0.1.0",
  "description": "Template for react app using axios, react-router, recoil and tailwind",
  "main": "index.js",
  "scripts": {
    "generate-client": "bash ./etc/generate-client.sh",
    "serve": "NODE_ENV=development webpack serve --static-directory dist",
    "build:js": "NODE_ENV=production webpack",
    "build:css": "NODE_ENV=production postcss tailwind.css -o dist/css/styles.css",
    "watch:css": "postcss tailwind.css -o dist/css/styles.css --watch",
    "watch": "npm run serve & npm run watch:css",
    "build": "npm run generate-client && npm run build:js && npm run build:css",
    "lint": "eslint './src/**/*.{js,ts,tsx}' --quiet --fix",
    "prettify": "prettier -w ."
  },
  "dependencies": {
    "@babel/runtime": "^7.15.3",
    "axios": "^0.21.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "recoil": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@openapitools/openapi-generator-cli": "^2.3.10",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "html-webpack-plugin": "^5.3.2",
    "openapi-client-axios-typegen": "^3.14.1",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "prettier": "2.3.2",
    "purgecss": "^4.0.3",
    "tailwindcss": "^2.2.7",
    "tailwindcss-debug-screens": "^2.1.0",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0-rc.1"
  },
  "author": "",
  "license": "ISC"
}
